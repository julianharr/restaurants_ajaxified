<h1>Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= link_to restaurant.name, restaurant_path(restaurant) %>

      <!-- remote: true for AJAX implementation so page doesn't reload -->
      <%= link_to "Delete", restaurant, method: :delete, remote: true, class:"btn-sm btn-danger" %>
    </li>
  <% end %>
</ul>
